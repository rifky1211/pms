<%- include('../partials/header') %> <%- include('../components/navbar') %>
<% if(success.length > 0){ %>
  <div class="alert alert-success" id="alert-success" role="alert"><%= success %></div>
<% } %>
<div class="header-style">
  <h1>Edit User</h1>
</div>
<form action="" class="form-horizontal" method="POST">
  <div class="form-group mb-4">
    <div class="row">
      <label for="email" class="control-label col-sm-2">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        class="form-control col-sm-2"
        placeholder="Email"
        value="<%= data.email %>"
        required
      />
    </div>
  </div>
  <div class="form-group mb-4">
      <div class="row">
          <label for="firstname" class="control-label col-sm-2">Firstname</label>
          <input type="text" name="firstname" id="firstname" class="form-control col-sm-2"required value="<%= data.firstname %>">
      </div>
  </div>
  <div class="form-group mb-4">
    <div class="row">
        <label for="lastname" class="control-label col-sm-2">Lastname</label>
        <input type="text" name="lastname" id="lastname" class="form-control col-sm-2"value="<%= data.lastname %>" required>
    </div>
</div>
  
<button type="submit" class="btn btn-primary mt-4">Add</button>
  <a href="/users/edit/<%= userid %>/change-password" class="btn btn-warning mt-4 mx-3">Change Password</a>

</form>
<%- include('../partials/footer') %>
