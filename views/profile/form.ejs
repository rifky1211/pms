<%- include('../partials/header') %>
<%- include('../components/navbar') %> 

<% if(success.length > 0){ %>
  <div class="alert alert-success" id="alert-success" role="alert"><%= success %></div>
<% } %>

<div class="header-style">
  <h1>Update Profile</h1>
</div>

<form action="" class="form-horizontal" method="POST">
  <div class="form-group">
    <label for="email" class="control-label sm-2">Email</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="email" name="email" value="<%= email %> " readonly disabled />
    </div>
  </div>
  <div class="form-group">
    <label for="position" class="control-label sm-2">Postion</label>
    <div class="col-sm-4">
      <select name="position" id="position" class="custom-select col-sm-10">
        <option value="">Choose Position ...</option>
        <option value="Programmer"<%= data.position == 'Programmer' ? ' selected' : '' %> >Programmer</option>
        <option value="Quality Assurance"<%= data.position == 'Quality Assurance' ? ' selected' : '' %>>Quality Assurance</option>
        <option value="Manager"<%= data.position == 'Manager' ? ' selected' : '' %>>Manager</option>
      </select>
    </div>
  </div>
  <div class="d-flex">
    <div class="p-2">Type</div>
    <div class="p-2 option-checkbox">
      <div class="custom-control custom-checkbox">
        <input name="isfulltime" type="checkbox" class="custom-control-input" value="true"
        id="isfulltime"<%= data.isfulltime == true ? ' checked' : '' %>/>
        <label class="custom-control-label" for="isfulltime">Fulltime</label>
      </div>
    </div>
  </div>
  <button type="submit" class="btn btn-primary" id="btn-click">Update</button>
  <a href="/profile/change-password" class="btn btn-warning">Change Password</a>
</form>

<script type="text/javascript">

  $('#alert-success').fadeOut(3000)

</script>

<%- include('../partials/footer') %> 