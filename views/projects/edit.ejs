<h1>Add Member to Project</h1>

<form action="" class="form-horizontal" method="POST">
  <div class="d-flex">
    <div class="p-2">Name Members</div>
    <div class="p-2 option-checkbox">
      <% data.forEach(item => { %>
      <div class="custom-control custom-checkbox">
        <input
          name="userid"
          type="checkbox"
          class="custom-control-input"
          id="<%= item.userid %>"
          value="<%= item.userid %>"
          checked
        />
        <label class="custom-control-label" for="<%= item.userid %>"><%= item.firstname %></label>
    </div>
      <% }) %>
      <% name.forEach(item => { %> 
      <div class="custom-control custom-checkbox">
        <input type="checkbox" name="userid" class="custom-control-input" id="<%= item.userid %>" value="<%= item.userid %>">
        <label for="<%= item.userid %>" class="custom-control-label"><%= item.firstname %> </label>
      </div>
      <% }) %> 
    </div>
  </div>
  <div class="form-group">
    <label for="name" class="control-label sm-2">Name Project</label>
    <div class="col-sm-4">
      <input type="text" class="form-control"name="name" value="<%= count[0].name %>" />
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Add</button>
</form>

