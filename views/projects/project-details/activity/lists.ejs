<%- include('../../../partials/header-details.ejs') %> 
<%- include('../../../components/navbar') %>

<div class="container-fluid">
  <div class="row">
<%- include('../../../components/sidebar') %>
    

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <div
        class="
          d-flex
          justify-content-between
          flex-wrap flex-md-nowrap
          align-items-center
          pt-3
          pb-2
          mb-3
          border-bottom
        "
      >
        <h1 class="h2">Activity</h1>
      </div>
      
      <div class="card">
        <div class="card-body">
          <p>Activity</p>
          <p><%= `From ${moment(from).format("MM/DD/YYYY")} to ${moment(now).format("MM/DD/YYYY")}` %></p>
          <% for(const dayName in result){ %> 
            <p><%= dayName == moment(new Date()).format("dddd") ? 'Today' : dayName %> </p>
            <ul>
              <% result[dayName].data.forEach(item => { %> 
            <li><%= moment(item.time).format("HH:mm") %> <%= item.title %> #<%= item.issueid %> (<%= item.description %>): Description, author: <%= item.firstname %> </li>
            <% }) %> 
          </ul>
          <% } %> 
            
         
          
        </div>
      </div>
    </main>
  </div>
</div>
<%- include('../../../partials/footer-details.ejs') %>
