<%- include('../partials/header') %>
<%- include('../components/navbar') %> 

<div class="header-style">
  <h1>Add Member to Project</h1>
</div>

<form action="" class="form-horizontal" method="POST">
  <div class="form-group">
    <label for="name" class="control-label sm-2">Name Project</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="name" name="name" />
    </div>
  </div>
  <div class="d-flex">
    <div class="p-2">Members</div>
    <div class="p-2 option-checkbox">
      <% users.forEach(item => { %> 
      <div class="custom-control custom-checkbox">
        <input
          name="userid"
          type="checkbox"
          class="custom-control-input"
          id="<%= item.userid %>"
          value="<%= item.userid %>"
        />
        <label class="custom-control-label" for="<%= item.userid %>"><%= item.firstname %> <%= item.lastname %></label>
      </div>
      <% }) %> 
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Add</button>
</form>

<%- include('../partials/footer') %>
